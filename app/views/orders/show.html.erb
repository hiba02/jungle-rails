<%# <%= debug @line_items %> 
<%# <%= @line_items.id  %>
<% @products.each do |item| %>
<p><%= item.image %></p> 
<% end %>
@line_items.product_id  

<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <% total = 0 %>
      <% @products.each do |item| %>
      <tbody>
        <tr>
          <td>
            <%= image_tag item.image.tiny %>
          </td>
          <td>
            <h4><%= item.name %></h4>
            <br>
            <p><%= item.description %></p>
          </td>
          <td>
            $<%= item.price_cents / 100.0 %>
          </td>
          <td>
            
            <%= item.quantity %>
            
          </td>
          <td>
            $<%= item.price_cents / 100.0 * item.quantity %>
            <% subTotal = (item.price_cents  / 100.0) * item.quantity %>
            <% total += subTotal%>
          </td>
        </tr>
      </tbody>
      <% end %> 



      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= total  %>
          </th>
        </tr>
      </tfoot>
      
      
    </table>


    </div>
    <div>
      <table>
        <tr>
          <th colspan="4">
            Email
          </th>
          <th>
            <%= @order.email  %>
          </th>
        </tr>
      </table>
    </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
